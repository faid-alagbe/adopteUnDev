{% extends 'base.html.twig' %}

{% block title %}Postes index{% endblock %}

{% block body %}
    <h1>Postes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Localisation</th>
                <th>Experience_requise</th>
                <th>Salaire</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for poste in postes %}
            <tr>
                <td>{{ poste.id }}</td>
                <td>{{ poste.titre }}</td>
                <td>{{ poste.localisation }}</td>
                <td>{{ poste.experienceRequise }}</td>
                <td>{{ poste.salaire }}</td>
                <td>{{ poste.description }}</td>
                <td>
                    <a href="{{ path('app_postes_show', {'id': poste.id}) }}">show</a>
                    <a href="{{ path('app_postes_edit', {'id': poste.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_postes_new') }}">Create new</a>
{% endblock %}
